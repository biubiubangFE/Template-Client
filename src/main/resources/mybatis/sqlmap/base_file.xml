<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mhdss.dc.dao.BaseFileDAO">

  <sql id="insert_columns">
    (file_type, file_path, file_url, file_hash, status, c_time, m_time)
  </sql>

  <sql id="insert_values">
    (#{fileType}, #{filePath}, #{fileUrl}, #{fileHash}, #{status}, #{cTime}, #{mTime})
  </sql>

  <sql id="query_columns">
    id, file_type AS fileType, file_path AS filePath, file_url AS fileUrl, file_hash AS fileHash, status, c_time AS cTime, m_time AS mTime
  </sql>

  <sql id="where">
    <where>
        <if test="fileHash != null">
           AND file_hash = #{fileHash}
        </if>
    </where>
  </sql>

  <sql id="limit_where">
    <include refid="where"/>
    <if test="range != 0">
      LIMIT ${start}, ${range}
    </if>
  </sql>

  <insert id="insert" parameterType="com.mhdss.dc.dataobject.BaseFileDO">
    <selectKey keyProperty="id" resultType="long">
      SELECT LAST_INSERT_ID() AS id
    </selectKey>
    INSERT INTO base_file <include refid="insert_columns"/> VALUES <include refid="insert_values"/>
  </insert>

  <update id="insertUpdateOnDuplicate" parameterType="com.mhdss.dc.dataobject.BaseFileDO">
    <selectKey keyProperty="id" resultType="long">
      SELECT LAST_INSERT_ID() AS id
    </selectKey>
    INSERT INTO base_file <include refid="insert_columns"/> VALUES <include refid="insert_values"/> ON DUPLICATE KEY UPDATE m_time = #{mTime}, id = LAST_INSERT_ID(id)
  </update>

  <update id="updateById" parameterType="com.mhdss.dc.dataobject.BaseFileDO">
    UPDATE base_file
    <set>
      <if test="fileType != null">
        file_type = #{fileType},
      </if>
      <if test="filePath != null">
        file_path = #{filePath},
      </if>
      <if test="fileUrl != null">
        file_url = #{fileUrl},
      </if>
      <if test="fileHash != null">
        file_hash = #{fileHash},
      </if>
      <if test="status != null">
        status = #{status},
      </if>
      <if test="cTime != null">
        c_time = #{cTime},
      </if>
      <if test="mTime != null">
        m_time = #{mTime},
      </if>
    </set>
    WHERE id = #{id}
  </update>

  <update id="updateByIds" parameterType="java.util.Map">
    UPDATE base_file
    <set>
      <if test="target.fileType != null">
        file_type = #{target.fileType},
      </if>
      <if test="target.filePath != null">
        file_path = #{target.filePath},
      </if>
      <if test="target.fileUrl != null">
        file_url = #{target.fileUrl},
      </if>
      <if test="target.fileHash != null">
        file_hash = #{target.fileHash},
      </if>
      <if test="target.status != null">
        status = #{target.status},
      </if>
      <if test="target.cTime != null">
        c_time = #{target.cTime},
      </if>
      <if test="target.mTime != null">
        m_time = #{target.mTime},
      </if>
    </set>
    WHERE id IN
    <foreach close=")" collection="ids" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </update>

  <delete id="deleteById" parameterType="long">
    DELETE FROM base_file WHERE id = #{id}
  </delete>

  <delete id="deleteByIds" parameterType="java.util.Collection">
    DELETE FROM base_file WHERE id IN
    <foreach close=")" collection="collection" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </delete>

  <select id="selectById" parameterType="long" resultType="com.mhdss.dc.dataobject.BaseFileDO">
    SELECT <include refid="query_columns"/> FROM base_file WHERE id = #{id}
  </select>

  <select id="selectIdsByQuery" parameterType="com.mhdss.dc.query.BaseFileQuery" resultType="long">
    SELECT id FROM base_file <include refid="limit_where"/>
  </select>

  <select id="selectByIds" parameterType="java.util.Collection" resultType="com.mhdss.dc.dataobject.BaseFileDO">
    SELECT <include refid="query_columns"/> FROM base_file WHERE id IN
    <foreach close=")" collection="collection" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </select>

  <select id="selectCount" parameterType="com.mhdss.dc.query.BaseFileQuery" resultType="int">
    SELECT COUNT(*) FROM base_file <include refid="where"/>
  </select>

  <select id="selectList" parameterType="com.mhdss.dc.query.BaseFileQuery" resultType="com.mhdss.dc.dataobject.BaseFileDO">
    SELECT <include refid="query_columns"/> FROM base_file <include refid="limit_where"/>
  </select>
</mapper>